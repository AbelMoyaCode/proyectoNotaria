<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Encabezado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/colorPrimary"
            android:elevation="2dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/buttonVolver"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Volver"
                android:tint="@color/white"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detalle del Trámite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título del trámite -->
            <TextView
                android:id="@+id/textViewTituloTramite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compraventa de Inmueble"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:paddingBottom="8dp" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/textViewDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Formaliza la transferencia de propiedad de un inmueble con todas las garantías legales."
                android:textSize="15sp"
                android:textColor="#4CAF50"
                android:lineSpacingExtra="2dp"
                android:paddingBottom="20dp" />

            <!-- Sección Requisitos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requisitos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <!-- Lista de requisitos -->
            <TextView
                android:id="@+id/textViewRequisitos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Identificaciones oficiales vigentes\n• Escritura pública del inmueble\n• Comprobante de domicilio reciente\n• Constancia de no adeudo"
                android:textSize="15sp"
                android:textColor="#555555"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="20dp" />

            <!-- Card de información adicional -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Precio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Precio:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/textViewPrecio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 250.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />
                    </LinearLayout>

                    <!-- Duración estimada -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Duración estimada:"
                            android:textSize="15sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/textViewDuracion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3-5 días"
                            android:textSize="15sp"
                            android:textColor="#333333" />
                    </LinearLayout>

                    <!-- Categoría -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Categoría:"
                            android:textSize="15sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/textViewCategoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Escrituras"
                            android:textSize="15sp"
                            android:textColor="#333333" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botón Agendar cita -->
            <Button
                android:id="@+id/buttonAgendarCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agendar cita"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#00C896"
                android:paddingVertical="14dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
